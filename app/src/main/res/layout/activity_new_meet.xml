<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewMeetActivity">

    <EditText
        android:id="@+id/edit_text_meet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:inputType="text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/button_set_meet_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"/>

        <TextView
            android:id="@+id/text_view_meet_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/button_set_meet_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"/>

        <TextView
            android:id="@+id/text_view_meet_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </LinearLayout>

    <EditText
        android:id="@+id/edit_text_meet_docs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Required documents"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/edit_text_meet_agenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Agenda of the meet"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/save_meet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Save" />

</LinearLayout>