<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"

    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/purple_200"
        android:padding="8dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/grocery_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grocery_item"
            android:layout_alignStart="@+id/grocery_item"
            android:layout_alignEnd="@+id/grocery_item"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="1dp"
            android:text="Descp"
            android:maxLines="1"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/grocery_item"
            android:layout_alignRight="@+id/grocery_item"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="1dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/grocery_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:text="Item"
            android:textSize="25sp"
            android:layout_marginLeft="6dp"
            android:layout_alignParentLeft="true" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/grocery_desc"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="3dp"
            android:text="@string/present_quantity"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/present_quantity"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/grocery_desc"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="158dp"
            android:layout_marginLeft="158dp"
            android:layout_marginTop="3dp"
            android:text="1"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/grocery_desc"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="268dp"
            android:layout_marginLeft="268dp"
            android:layout_marginTop="4dp"
            android:text="@string/buy"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/buy_quantity"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/grocery_desc"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="298dp"
            android:layout_marginLeft="307dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="2"
            android:textSize="16sp"
            app:fontFamily=" " />

        <ImageView
            android:id="@+id/image_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/grocery_item"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="16dp"

            android:layout_marginRight="16dp"
            android:src="@drawable/ic_share" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>